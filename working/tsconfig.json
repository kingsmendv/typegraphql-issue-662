{
  "compilerOptions": {
    "lib": ["es2020"],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@models": ["./models/*"],
      "@modules/*": ["./modules/*"]
    },
    "baseUrl": "./graphql/",
    "allowSyntheticDefaultImports": true
  },
  "include": ["graphql/**/*"],
  "exclude": ["node_modules"]
}